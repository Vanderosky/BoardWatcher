@page "/gameFinder"

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="form-group row">
                        <label for="email_address" class="col-md-4 col-form-label text-md-right">Game ID</label>
                        <div class="col-md-6">
                            <input type="text" id="email_address" class="form-control" name="email-address" required
                                autofocus>
                        </div>
                    </div>

                    <div class="col-md-6 offset-md-4">
                        <button type="submit" class="btn btn-primary">
                            Watch game
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

