@layout GameFinderLayout
@page "/"
@inject NavigationManager NavigationManager

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="form-group row">
                        <label for="email_address" class="col-md-4 col-form-label text-md-right">Game ID</label>
                        <div class="col-md-6">
                            <EditForm Model="@gameInputModel" OnValidSubmit="@HandleValidSubmit">
                                <DataAnnotationsValidator />
                                <ValidationSummary />

                                <InputText type="number" class="form-control" required autofocus
                                    @bind-Value="gameInputModel.Id" />

                                <button type="submit" class="btn btn-primary">
                                    Watch game
                                </button>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private GameInputModel gameInputModel = new();

    private void HandleValidSubmit()
    {
        NavigationManager.NavigateTo("chess/" + gameInputModel.Id);
    }
}
